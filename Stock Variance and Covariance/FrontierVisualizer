from PortfolioAnalysis import portfolioAnalyzer
class FrontierVisualizer:
    
    def __init__(self,riskFreeRate,includeBond=False,allowShort=False,numPoints=2000,percentileCutoff=90, *stocks):
        self.r = riskFreeRate
        self.includeBone = includeBond
        self.allowShort = allowShort
        self.numPoints = numPoints
        self.percentileCutoff = percentileCutoff
        self.stocks = stocks

        p = portfolioAnalyzer(r,includeBond,*stocks)
        self.points = p.get_clean_points(self.numPoints,self.allowShort,self.percentileCutoff)

    def get_optimal_portfolio(points):
        bestSharpe = (0,p)
        for c,p in points:
            if p > bestSharpe[0]:
                bestSharpe = (c,p)

                



        
        

